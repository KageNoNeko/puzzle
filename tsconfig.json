{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6", "dom"
        ],
        "types": [
            "reflect-metadata"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist/"
    }
}